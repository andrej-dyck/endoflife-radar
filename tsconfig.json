{
  "extends": "./tsconfig.node.json",
  "compilerOptions": {
    /* Bundler mode */
    "moduleResolution": "bundler",
    "module": "preserve",
    "noEmit": true,
    "allowSyntheticDefaultImports": true,

    /* JSX */
    "jsx": "react-jsx",

    /* Libs */
    "lib": ["ES2024", "DOM", "DOM.Iterable"],
    "types": ["vite/client"]
  },
  "include": ["./src", "./src/locale/*.json", "./src/test-data/*.json", "./*.d.ts", "./*.config.ts"]
}
